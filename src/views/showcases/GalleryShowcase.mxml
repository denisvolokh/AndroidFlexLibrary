<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="Gallery" xmlns:gallery="com.gallery.*">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center"
						  verticalAlign="middle"/>
	</s:layout>
	<s:navigationContent>
		<s:Button label="Back" click="{ navigator.popToFirstView() }"/>
	</s:navigationContent>
	
	<gallery:Gallery selectedIndex="1"
					 width="250"
					 height="100">
		<s:SkinnableContainer width="100%" height="100%" backgroundColor="#0000ff"/>
		<s:SkinnableContainer width="100%" height="100%" backgroundColor="#FF0000"/>
		<s:SkinnableContainer width="100%" height="100%" backgroundColor="#00FF00"/>
	</gallery:Gallery>
	
</s:View>
