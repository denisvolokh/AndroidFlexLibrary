<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="Home"
		xmlns:swipeselector="com.swipeselector.*">

	<fx:Script>
		<![CDATA[
			import com.toast.ToastMessage;
			
			import mx.collections.ArrayCollection;
			
			import spark.events.IndexChangeEvent;
			
			import views.showcases.PopoverShowcase;
			import views.showcases.RatingShowcase;
			import views.showcases.ToastMessageShowcase;

			protected function buttonPopOver_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(PopoverShowcase);
			}

			protected function buttonRatings_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(RatingShowcase);
			}

			protected function buttonToatMessage_clickHandler(event:MouseEvent):void
			{
				navigator.pushView(ToastMessageShowcase);
			}
			
			protected function swipselector1_changeHandler(event:IndexChangeEvent):void
			{
				ToastMessage.showToast("New selection: " + String(swipeSelector.selectedItem), this, 2, ToastMessage.PLACEMENT_TOP);
			}
			
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:VGroup width="100%"
			  height="100%"
			  verticalAlign="middle"
			  horizontalAlign="center">
		<s:Button id="buttonPopOver"
				  label="PopOver component"
				  width="70%"
				  click="buttonPopOver_clickHandler(event)"/>
		<s:Button id="buttonToatMessage"
				  width="70%"
				  label="Toast Message component"
				  click="buttonToatMessage_clickHandler(event)"/>
		<s:Button id="buttonRatings"
				  width="70%"
				  label="Rating component"
				  click="buttonRatings_clickHandler(event)"/>
		<swipeselector:SwipSelector id="swipeSelector"
									selectedIndex="1"
									skinClass="com.swipeselector.SwipSelectorSkin"
									dataProvider="{ new ArrayCollection(['English', 'Spanish', 'Russian']) }"
									change="swipselector1_changeHandler(event)"/>
	</s:VGroup>

</s:View>
