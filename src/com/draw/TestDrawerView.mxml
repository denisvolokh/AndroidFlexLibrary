<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  width="100%" height="80"
		  filters="{ glowInner }"
		  borderStyle="solid">
	<s:borderStroke>
		<s:SolidColorStroke weight="1"
							color="#FFFFFF"/>
	</s:borderStroke>
	<s:layout>
		<s:HorizontalLayout horizontalAlign="center"
							verticalAlign="middle"/>
	</s:layout>
	
	<s:Button label="One"/>
	<s:Button label="Two"/>
	<s:Button label="Three"/>
	
	<fx:Declarations>
		<s:GlowFilter id="glowInner" color="#000000" blurX="10" blurY="10" alpha=".6" inner="true" strength="2"/>
	</fx:Declarations>
	
</s:BorderContainer>
