<!--- The default skin class for the Spark Button component.

	 @see spark.components.Button

	 @langversion 3.0
	 @playerversion Flash 10
	 @playerversion AIR 1.5
	 @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   xmlns:css="css.*"
				   xmlns:swipeselector="com.swipeselector.*"
				   minWidth="21"
				   minHeight="21"
				   alpha.disabled="0.5">

	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("com.swipeselector.SwipSelector")]
		]]>
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
		]]>
	</fx:Script>


	<!-- states -->
	<s:states>
		<s:State name="normal"/>
		<s:State name="open"/>
		<s:State name="disabled"/>
	</s:states>

	<s:PopUpAnchor id="popup"
				   displayPopUp.open="true"
				   popUpPosition="above"
				   y="{ popup.y - 5 }"
				   x="{ this.x - 20 }">
		<s:Group id="dropDown"
				 width="{ this.width + 40 }"
				 height="{ this.height * 1.5 }">
			<s:RectangularDropShadow id="dropShadow"
									 blurX="20"
									 blurY="20"
									 alpha="0.45"
									 distance="7"
									 angle="90"
									 color="#000000"
									 left="0"
									 top="0"
									 right="0"
									 bottom="0"/>

			<!-- fill -->
			<!--- Defines the appearance of drop-down list's background fill. -->
			<s:Rect id="background"
					left="0"
					right="0"
					top="0"
					bottom="0"
					radiusX="4"
					radiusY="4">
				<s:fill>
					<s:LinearGradient rotation="90">
						<s:GradientEntry color="#656668"/>
						<s:GradientEntry color="#454546"/>
					</s:LinearGradient>
				</s:fill>
			</s:Rect>

			<!--- @private -->
			<s:Scroller id="scroller"
						left="25"
						top="0"
						right="25"
						bottom="0"
						hasFocusableChildren="false"
						minViewportInset="1">
				<!--- @copy spark.components.SkinnableDataContainer#dataGroup-->
				<s:DataGroup id="dataGroup"
							 itemRenderer="com.swipeselector.SwipSelectionLabelItemRenderer">
					<s:layout>
						<s:HorizontalLayout horizontalAlign="center"
											verticalAlign="middle"
											gap="0"/>
					</s:layout>
				</s:DataGroup>
			</s:Scroller>

			<swipeselector:LeftTriangle left="10"
										verticalCenter="0"/>

			<swipeselector:RightArrow right="10"
									  verticalCenter="0"/>

		</s:Group>
	</s:PopUpAnchor>

	<!---  The default skin is DropDownListButtonSkin.
		 @copy spark.components.supportClasses.DropDownListBase#openButton
		 @see spark.skins.spark.DropDownListButtonSkin -->
	<s:Button id="openButton"
			  left="0"
			  right="0"
			  top="0"
			  bottom="0"
			  focusEnabled="false"
			  skinClass="com.swipeselector.SwipeSelectorButtonSkin"/>

	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
	<s:Label id="labelDisplay"
			 left="20"
			 right="20"
			 top="2"
			 bottom="2"
			 color="#FFFFFF"
			 fontWeight="normal"
			 horizontalCenter="0"
			 maxDisplayedLines="1"
			 mouseEnabled="false"
			 textAlign="center"
			 verticalAlign="middle"
			 verticalCenter="1">
	</s:Label>

</s:SparkButtonSkin>
